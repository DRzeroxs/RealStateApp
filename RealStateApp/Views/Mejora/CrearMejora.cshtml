@model RealStateApp.Core.Application.ViewModel.Mejora.SaveMejoraViewModel;
@{
    ViewData["Title"] = "CrearTipoVenta";

    bool editMode = Model.Id == 0 ? false : true;
}


<div class="d-flex align-items-center justify-content-center container mt-4">
    <form enctype="multipart/form-data" method="post" class="w-25 bg-succes p-3" asp-controller="Mejora" asp-action="@(editMode ? "EditarMejora" : "CrearMejora")">
        <div class="p-2 bg-success mb-2 ">
            <h1 style="color: white;" class="text-center ">Agregar Desarrollador</h1>
        </div> @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <input asp-for="Nombre" class="form-control w-100 mb-3 p-2" placeholder="Nombre">

        <textarea asp-for="Descripcion" class="form-control">

         </textarea>


        <div class="d-flex  justify-content-end align-items-end mt-3" style="gap:10px ;">
            <a asp-controller="Mejora" asp-action="ListadoMejoras" class="btn btn-secondary  font-weight-bold  ">Cancelar</a>
            <button type="submit" class="btn btn-primary  font-weight-bold">Agregar</button>
        </div>
    </form>
</div>
