@model RealStateApp.Core.Application.ViewModel.User.RegistrerViewModel;
@{
    ViewData["Title"] = "Registrer";
}

<div class="d-flex align-items-center justify-content-center">
    <form enctype="multipart/form-data" class="d-flex flex-column w-25 m-2 formulario__registro" asp-controller="User" asp-action="Registrer">
        <h2 class="text-center mb-4 h1">Registrate</h2>

        <input type="text" asp-for="FirstName" placeholder="Nombre" class="fw-bold" />
        <input type="text" asp-for=LastName placeholder="Apellido" class="fw-bold mt-4" />
        <input type="text" asp-for="PhoneNumber" placeholder="Telefono" class="fw-bold mt-4" />
        <input type="file" asp-for="file">
        <input type="text"
               placeholder="Nombre de Usuario" asp-for="UserName"
               class="fw-bold mt-4" />
        <input type="text" placeholder="Correo" asp-for="Email" class="fw-bold mt-4" />
        <input type="text" placeholder="Contraseña" asp-for=Password class="fw-bold mt-4" />
        <input type="text"
               placeholder="Confirmar Contraseña" asp-for=ConfirnPassword
               class="fw-bold mt-4" />

         <label class="mt-4" asp-for="TypeOfUser">Tipo de Usuario</label>
        <select asp-for="TypeOfUser" class="form-control">
            <option value="Agente">Agente</option>
            <option value="Cliente">Cliente</option>
        </select>

        <div class="mt-4 d-flex align-items-center justify-content-center">
            <button class="btn btn-primary w-75">Registrate</button>
        </div>
    </form>
</div>

