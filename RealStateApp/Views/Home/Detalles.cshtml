<section class="row">
    <div class="col-8">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://d2p0bx8wfdkjkb.cloudfront.net/static/properties/TBCZYOYRXE/KKE0QAHBJV/Eaf3FGeezF/00c4fc57-2522-47e0-963b-d7688d12219a.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/css/tucasa_v2.png" alt="Second slide">
                </div>
            </div>
            <button class="carousel-control-prev"
                    type="button"
                    data-bs-target="#carouselExampleAutoplaying"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next"
                    type="button"
                    data-bs-target="#carouselExampleAutoplaying"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <div class="detalles">
            <p class="mt-3">
                <span class="spn">Codigo: </span>@Model.Identifier
            </p>
            <p class="mt-3">
                <span class="spn">Tipo Propiedad: </span>@Model.TipoPropiedad.Nombre
            </p>

            <div>
                <p class="mt-3">
                    <span class="spn">Precio: </span>@Model.Precio
                </p>

                <div class="d-flex">
                    <div class="bed">
                        <i class="fa-solid fa-bed" style="color: #909090; font-size: 18px;"></i> @Model.NumHabitaciones
                    </div>
                    <div class="toilet">
                        <i class="fa-solid fa-toilet" style="color: #909090; font-size: 18px;"></i> @Model.NumAceados
                    </div>
                    <div class="rule">
                        <i class="fa-solid fa-ruler-combined" style="color: #909090; font-size: 18px;"></i> @Model.Size mt
                    </div>
                </div>
                <p class="mt-3">
                    <span class="spn">Descripcion: </span>@Model.Descripcion
                </p>
            </div>
        </div>
           
    </div>
   
    <div class="col-4 border-2">
        <div class="style-agente">
            <h5 class="asesoria">Solicita una asesoria.</h5>
        </div>
        <div class="container style-agente">
            <div style="gap: 20px">
                <img class="foto__agente rounded-circle" width="50" height="50" 
                     src="https://t4.ftcdn.net/jpg/03/45/64/29/360_F_345642939_5ayo76RqCN73ZMcFuqcUu3p5LhyJltCg.jpg"
                     alt="" />
                <p>@Model.Agente.Nombre @Model.Agente.Apellido</p>
            </div>
            <div>
                <p><i class="fa-solid fa-envelope"></i> Email</p>
                <p>Agente@gmail.com</p>
            </div>
           <div>
                <p><i class="fa-brands fa-whatsapp"></i> Celular</p>
                 <p>@Model.Agente.Telefono</p>
           </div>
            
        </div>
        
    </div>
</section>