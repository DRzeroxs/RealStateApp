
@{
    ViewData["Title"] = "Index";

    var countPropiedades = @ViewBag.contPropiedades;
    var countAgentesActivos = @ViewBag.countAgentesActivos;
    var countAgentesInactivos = @ViewBag.countAgentesInactivos;
    var countClientesActivos = @ViewBag.countClientesActivos;
    var countClientesInactivos = @ViewBag.countClientesInactivos;
    var countDesarrolladoresActivos = @ViewBag.countDesarrolladoresActivos;
    var countDesarrolladoresInactivos = @ViewBag.countDesarrolladoresInactivos;
}


<div class="main--content">

    <div class="tabular">
        <div class="card-container">
            <div class="card--wrapper">
                <div class="card--seguidores" style="background: #023e8a">
                    <div class="card--header">
                        <div class="amount--seguidores">
                            <span class="title">Cantidad Propiedades</span>
                            <div class="followers-count">@countPropiedades</div>
                        </div>

                        <i class="fa-solid fa-house icon"></i>
                    </div>
                </div>
                <div class="card--seguidores" style="background: #023e8a">
                    <div class="card--header">
                        <div class="amount--seguidores">
                            <span class="title">Agentes Activos</span>
                            <div class="followers-count">@countAgentesActivos</div>
                        </div>
                        <i class="fa-solid fa-user-check icon"></i>
                    </div>
                </div>
                <div class="card--seguidores" style="background: #023e8a">
                    <div class="card--header">
                        <div class="amount--seguidores">
                            <span class="title">Agentes Inactivos</span>
                            <div class="followers-count">@countAgentesInactivos</div>
                        </div>
                        <i class="fa-solid fa-user-xmark icon"></i>
                    </div>
                </div>
                <div class="card--seguidores" style="background: #023e8a">
                    <div class="card--header">
                        <div class="amount--seguidores">
                            <span class="title">Clientes Activos</span>
                            <div class="followers-count">@countClientesActivos</div>
                        </div>
                        <i class="fa-solid fa-user-check icon"></i>
                    </div>
                </div>

                <div class="card--seguidores" style="background: #023e8a">
                    <div class="card--header">
                        <div class="amount--seguidores">
                            <span class="title">Clientes Inactivos</span>
                            <div class="followers-count">@countClientesInactivos</div>
                        </div>
                        <i class="fa-solid fa-user-xmark icon"></i>
                    </div>
                </div>

                <div class="card--seguidores" style="background: #023e8a">
                    <div class="card--header">
                        <div class="amount--seguidores">
                            <span class="title">Desarrolladores Activos</span>
                            <div class="followers-count">@countDesarrolladoresActivos</div>
                        </div>
                        <i class="fa-solid fa-user-check icon"></i>
                    </div>
                </div>
                <div class="card--seguidores" style="background: #023e8a">
                    <div class="card--header">
                        <div class="amount--seguidores">
                            <span class="title">Desarrolladores Inactivos</span>
                            <div class="followers-count">@countDesarrolladoresInactivos</div>
                        </div>
                        <i class="fa-solid fa-user-xmark icon"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>